<!-- Content -->
<div id="content">
	
	<div class="container">
		<div class="pageTop">
			<h1>Blog</h1>
		</div>
		<div class="pageContent">
			<div class="row">
				<div class="span8">
					<div class="postList">
						<div class="post">
							<div class="postDetails">
								<span>
									<% if @posts.any? %>
										<section id="blog_posts">
											<%= render :partial => "/refinery/blog/shared/post", :collection => @posts %>
											<%= will_paginate @posts %>
										</section>
								    <% else %>
										<p><%= t('.no_blog_articles_yet') %></p>
									<% end %>
	 
								</span>
							</div>
						</div>
					</div>
				</div>
				<div class="span4">
					<div class="sideBlock">
						<%= render :partial => "/refinery/blog/shared/categories" %>
					</div>
				</div>
	
			</div>
		</div>
	</div>
			
</div>

